<?xml version="1.0" encoding="utf-8"?>

 <resources>
      <!-- Style for Button -->
    <!-- ************************ -->
    
     <style name="styleBtn">
        <item name="android:textSize">@dimen/textSize</item> 
        <item name="android:textStyle">bold</item>        
        <item name="android:layout_marginBottom">@dimen/marginVert</item>
        <item name="android:layout_marginTop">@dimen/marginVert</item>        
        <item name="android:layout_marginRight">@dimen/marginHori</item>
        <item name="android:layout_marginLeft">@dimen/marginHori</item>
    </style>
    <!-- Style for TextView -->
    <!-- ************************ -->
    
    <style name="styleTxv" parent="styleBtn">
        <item name="android:background">@color/main_txv_background</item>
        <item name="android:paddingLeft">@dimen/paddingHori</item>
        <item name="android:paddingRight">@dimen/paddingHori</item>
        <item name="android:paddingTop">@dimen/paddingVert</item>
        <item name="android:paddingBottom">@dimen/paddingVert</item>
        <item name="android:layout_marginLeft">@dimen/marginHori</item>
        <item name="android:layout_marginRight">@dimen/marginHori</item>
        <item name="android:layout_marginBottom">@dimen/marginVert</item>
        <item name="android:layout_marginTop">@dimen/marginVert</item>
    </style>
     <!-- Style for Title -->
    <!-- ************************ -->
    <style name="styleSmallTitle" parent="styleTxv">
         <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">5.0</item>
    </style>
     <!-- Style for Title -->
    <!-- ************************ -->
    <style name="styleTitle" parent="styleSmallTitle">
        <item name="android:textSize">22sp</item> 
        <item name="android:shadowColor">@color/main_background</item>
    </style>

    <!-- Style for EditText -->
    <!-- ************************ -->
    
    <style name="styleEdt" parent="styleTxv">
        <item name="android:textSize">@dimen/textSizeLarge</item> 
        <item name="android:textStyle">italic</item>
    </style>
    
    <!-- Style for ListArray -->
    
    <style name="styleListOdd" parent="styleTxv">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="styleList" parent="styleTxv">
        <item name="android:textStyle">normal</item>
    </style>

    

</resources>